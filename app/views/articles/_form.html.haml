.container
  %ul
    - @article.errors.full_messages.each do |message|
      %li= message
  = form_with(model: article, local: true, data: { turbo: false}) do |f|
    %div
      = f.label :eyecatch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title
    %div
      = f.label :content, 'コンテンツ'
    %div
      = f.rich_text_area :content
    = f.submit '保存', class: 'btn-primary'
